<%= form_with model: book do |form| %>
  <div>
    <%= form.label :Name %><br>
    <%= form.text_field :Name %>
    <% book.errors.full_messages_for(:Name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :Author %><br>
    <%= form.text_area :Author %><br>
    <% book.errors.full_messages_for(:Author).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
